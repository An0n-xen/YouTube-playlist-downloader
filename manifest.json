{
    "name": "YouTube Playlist Downloader",
    "version": "1",
    "description": "Download YouTube playlists easily!",
    "manifest_version": 3,
    "permissions": [
        "background",
        "storage",
        "tabs",
        "downloads",
        "https://www.youtube.com/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*/playlist?list=_*"],
      "js": ["contentscript.js"]
    }
  ],
    "options_page": "app/settings.html",
    "browser_action": {
        "default_popup": "app/popup.html",
        "default_icon": {
            "16": "img/icon16.png",
            "32": "img/icon32.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        }
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    }
}
